<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_LEFT" prefHeight="68.0" style="-fx-background-color: white;"
      stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/11"
      fx:controller="Library.Controller.Utils.UserListItemController">
    <children>
        <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="userName" alignment="CENTER" text="User Name">
                    <font>
                        <Font size="19.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="3.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="userId" layoutX="25.0" layoutY="54.0" text="User Id: 512" textFill="#000000d3"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
            </padding>
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label alignment="CENTER" text="Role:" textFill="#2b2b2bdf">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="role" alignment="CENTER" layoutX="25.0" layoutY="15.0" text="User">
                            <font>
                                <Font name="Segoe UI Bold" size="17.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="5.0" top="3.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="4.0"/>
                    </VBox.margin>
                </HBox>
                <Label fx:id="email" text="Email: roshan@mail.com" textFill="#000000d3">
                    <VBox.margin>
                        <Insets top="4.0"/>
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
        <VBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
            <children>
                <JFXButton fx:id="viewBtn" focusTraversable="false" prefHeight="36.0" prefWidth="93.0"
                           styleClass="dashboard_blue_btn" text="View">
                    <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="EYE" size="22"/>
                    </graphic>
                    <padding>
                        <Insets bottom="7.0" left="12.0" right="12.0" top="7.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </JFXButton>
                <Label fx:id="joinedOn" text="Joined On: 21-04-2021" textFill="#000000c0"/>
            </children>
            <padding>
                <Insets left="15.0" right="15.0"/>
            </padding>
        </VBox>
    </children>
</HBox>
