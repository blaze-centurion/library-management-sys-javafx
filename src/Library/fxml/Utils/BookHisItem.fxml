<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="68.0" prefWidth="560.0" style="-fx-background-color: white;"
      stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/11"
      fx:controller="Library.Controller.Utils.IssuedBookItemController">
    <children>
        <VBox alignment="CENTER_LEFT" prefWidth="324.0" spacing="1.0" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="bookName" alignment="CENTER" text="Book Name">
                    <font>
                        <Font size="19.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="3.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="bookId" layoutX="25.0" layoutY="54.0" text="S.No. 512" textFill="#000000d3"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
            </padding>
        </VBox>
        <VBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
            <children>
                <JFXButton focusTraversable="false" prefHeight="36.0" prefWidth="93.0" styleClass="dashboard_blue_btn"
                           text="Issue">
                    <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="PLUS" size="22"/>
                    </graphic>
                    <padding>
                        <Insets bottom="7.0" left="12.0" right="12.0" top="7.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
                <Label fx:id="issuedAt" text="Issued At: 21-04-2021" textFill="#000000c0"/>
            </children>
            <padding>
                <Insets left="15.0" right="15.0"/>
            </padding>
        </VBox>
    </children>
</HBox>
